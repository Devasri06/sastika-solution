---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

import HeroText from "../components/HeroText.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<Navbar currentPath="/contact" />

	<section class="relative">
		<!-- Background image -->
		<div class="absolute inset-0 z-0">
			<img
				src="/hero-image/contact.svg"
				alt="Background"
				class="w-full h-full object-cover brightness-75"
			/>
		</div>

		<!-- Overlay to darken the image -->
		<div class="absolute inset-0 bg-black/40 z-10"></div>

		<!-- Hero text component -->
		<div class="relative z-20">
			<HeroText title1="Here To Assist You" title2="With Every Step Of" title3="Your Global Journey."/>
		</div>
	</section>
	<section class="max-w-6xl mx-auto px-4 py-16">
		<!-- Font import in the head of your document -->
		
	
		<div class="grid md:grid-cols-2 gap-12">
			<!-- Left Column -->
			<div class="space-y-12">
				<div>
					<h2 class="text-3xl font-bold">Talk To <span class="text-4xl text-[#D40000]">Us</span></h2>
					<p class="mt-4 text-gray-600">
						Got A Question Or Need Assistance? We're Here To Help! Whether You Have An Inquiry, Need Support, Or Just Want To Share Your Thoughts, Feel Free To Get In Touch.
					</p>
					<p class="mt-4 text-xl font-semibold">+91 9872325297</p>
				</div>
	
				<div>
					<h2 class="text-3xl font-bold">Email your <span class="text-4xl text-[#D40000]">queries</span></h2>
					<p class="mt-4 text-gray-600">
						Got a question or need assistance? We're here to help! Whether you have an inquiry, need support, or just want to share your thoughts, feel free to get in touch.
					</p>
					<p class="mt-4 text-xl font-semibold">support@sastika.com</p>
				</div>
			</div>
	
			<!-- Right Column - Form -->
			<div>
				<h1 class="text-4xl font-bold mb-8">Contact <span class="font-corinthia text-5xl text-[#D40000]">Us</span></h1>
				
				<form class="space-y-6">
					<div>
						<input 
							type="text" 
							placeholder="Name" 
							class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-[#D40000] focus:ring-1 focus:ring-[#D40000] outline-none transition"
						/>
					</div>
					
					<div>
						<input 
							type="email" 
							placeholder="Email" 
							class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-[#D40000] focus:ring-1 focus:ring-[#D40000] outline-none transition"
						/>
					</div>
					
					<div>
						<input 
							type="tel" 
							placeholder="Number" 
							class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-[#D40000] focus:ring-1 focus:ring-[#D40000] outline-none transition"
						/>
					</div>
					
					<div>
						<textarea 
							placeholder="Message" 
							rows="4" 
							class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-[#D40000] focus:ring-1 focus:ring-[#D40000] outline-none transition"
						></textarea>
					</div>
					
					<button 
						type="submit" 
						class="bg-[#D40000] text-white px-8 py-3 rounded-md hover:bg-red-700 transition-colors"
					>
						Send Us An Email
					</button>
				</form>
			</div>
		</div>
	</section>
	<Footer />
</Layout>
